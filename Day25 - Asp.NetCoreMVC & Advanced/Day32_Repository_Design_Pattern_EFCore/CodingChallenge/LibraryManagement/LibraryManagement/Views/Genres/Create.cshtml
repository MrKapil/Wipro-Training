@model LibraryManagementSystem.Models.Genre
@{
    ViewData["Title"] = "Add Genre";
}

<h2>Add Genre</h2>
<form id="createGenreForm">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

@section Scripts {
    <script>
        $("#createGenreForm").submit(function(e){
            e.preventDefault();
            var formData = $(this).serialize();
            $.ajax({
                url: '/Genre/Create',
                type: 'POST',
                data: formData,
                success: function(response){
                    if(response.success){
                        window.location.href = '/Genre';
                    } else {
                        alert("Error saving genre");
                    }
                }
            });
        });
    </script>
}
