@model IEnumerable<LibraryManagementSystem.Models.Genre>
@{
    ViewData["Title"] = "Genres";
}

<h2>Genres</h2>
<a href="@Url.Action("Create")" class="btn btn-primary" id="addGenreBtn">Add Genre</a>

<div id="genreList">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var genre in Model)
            {
                <tr>
                    <td>@genre.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = genre.GenreId })" class="btn btn-sm btn-warning editGenreBtn">Edit</a>
                        <button class="btn btn-sm btn-danger deleteGenreBtn" data-id="@genre.GenreId">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/genre.js"></script>
}
