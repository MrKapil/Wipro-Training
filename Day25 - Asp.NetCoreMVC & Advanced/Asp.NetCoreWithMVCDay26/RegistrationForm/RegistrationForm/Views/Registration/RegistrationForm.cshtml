@model RegistrationForm.Models.Subscribe

@{
    ViewData["Title"] = "RegistrationForm";
}

<h1>RegistrationForm</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistrationForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="city" class="control-label"></label><br />
                <select name="city" id="city">
                    <option value="Pune">Pune</option>
                    <option value="Yavatmal">Yavatmal</option>
                    <option value="Nagpur">Nagpur</option>
                    <option value="Amravati">Amravati</option>
                </select>
                <span asp-validation-for="city" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="gender" class="control-label"></label>
                <br />
                <form>
                    <p>Choose your gender:</p>
                    <input type="radio" id="male" name="gender" value="male">
                    <label for="male">Male</label><br>

                    <input type="radio" id="female" name="gender" value="female">
                    <label for="female">Female</label><br>

                    <input type="radio" id="other" name="gender" value="other">
                    <label for="other">Other</label><br>
                </form>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="Qualification" class="control-label"></label>
                <br />
                <input type="checkbox" id="subscribeNews" name="subscribe" value="newsletter">
                <label for="subscribeNews">BE</label>
                <br />
                <input type="checkbox" id="termsAgree" name="agreement" value="agreed" checked>
                <label for="termsAgree">BTech</label>
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
