@model MvcModelBindingDemo.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Complex Form</title>
</head>
<body>
    <h2>Complex Model Binding (User with Address)</h2>

    <form asp-action="ComplexResult" asp-controller="Home" method="post">
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>User</legend>
            <div>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" />
            </div>
            <div>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" />
            </div>
            <div>
                <label asp-for="Age"></label>
                <input asp-for="Age" type="number" />
            </div>
        </fieldset>

        <fieldset>
            <legend>Address (nested)</legend>
            <div>
                <label asp-for="Address.Street"></label>
                <input asp-for="Address.Street" />
            </div>
            <div>
                <label asp-for="Address.City"></label>
                <input asp-for="Address.City" />
            </div>
            <div>
                <label asp-for="Address.ZipCode"></label>
                <input asp-for="Address.ZipCode" />
            </div>
        </fieldset>

        <button type="submit">Submit</button>
    </form>

    <p><a asp-action="Index">Back</a></p>
</body>
</html>
