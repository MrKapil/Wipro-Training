@model BookStoreApp.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.Isbn</dd>
        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre</dd>
        <dt class="col-sm-2">Published On</dt>
        <dd class="col-sm-10">@Model.PublishedOn?.ToShortDateString()</dd>
        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
